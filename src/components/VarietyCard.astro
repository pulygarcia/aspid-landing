---
const {variety} = Astro.props;
---

<article class="bg-white p-2 flex rounded-lg gap-2 shadow-lg">
    <img src={variety.img} alt={variety.name} class="w-40 lg:w-56 object-cover rounded-lg">

    <div>
        <h4 class="font-bold text-xl">{variety.name}</h4>

        <p class="mt-3 inline-block bg-green-200 px-1 rounded">Ingredientes:</p>
        <ul>
            {
                variety.ingredients.map(ingredient => {
                    return <li class="text-slate-500 capitalize">. {ingredient}</li>
                })
            }
        </ul>
    </div>
</article>